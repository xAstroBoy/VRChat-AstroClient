[*.cs]

# CS0162: Unreachable code detected
dotnet_diagnostic.CS0162.severity = none

# Default severity for all analyzer diagnostics
//dotnet_analyzer_diagnostic.severity = none

# CS4014: Because this call is not awaited, execution of the current method continues before the call is completed
dotnet_diagnostic.CS4014.severity = none

# CS1998: Async method lacks 'await' operators and will run synchronously
dotnet_diagnostic.CS1998.severity = none

# CS0219: Variable is assigned but its value is never used
dotnet_diagnostic.CS0219.severity = none

# CS0414: The field 'API.Auth' is assigned but its value is never used
dotnet_diagnostic.CS0414.severity = none

# CS8632: The annotation for nullable reference types should only be used in code within a '#nullable' annotations context.
dotnet_diagnostic.CS8632.severity = none

# IDE0044: Add readonly modifier
dotnet_diagnostic.IDE0044.severity = none
csharp_prefer_simple_using_statement=false:suggestion

# IDE0090: Use 'new(...)'
csharp_style_implicit_object_creation_when_type_is_apparent = false

# IDE0052: Remove unread private members
dotnet_diagnostic.IDE0052.severity = none
csharp_indent_braces=false
csharp_using_directive_placement=inside_namespace:suggestion
csharp_space_after_cast=false
csharp_style_unused_value_expression_statement_preference=discard_variable:silent
dotnet_diagnostic.CA1309.severity=silent
dotnet_diagnostic.CA1805.severity=suggestion

# IDE0002: Simplify Member Access
dotnet_diagnostic.IDE0002.severity = none

# CS0618: Type or member is obsolete
dotnet_diagnostic.CS0618.severity = none

[*.{cs,vb}]
indent_style=space
dotnet_diagnostic.CA2215.severity=suggestion

# Default severity for all analyzer diagnostics
dotnet_analyzer_diagnostic.severity = none
